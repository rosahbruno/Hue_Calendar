<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background">

    <EditText
        android:id="@+id/textfieldone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Event Name"
        android:inputType="text|textCapWords|textAutoCorrect"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_below="@+id/textfieldone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstHourDisplay"
            android:paddingTop="2dp"
            android:layout_below="@+id/textfieldone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:hint="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/firstHourDisplay"
            android:paddingTop="2dp"
            android:textSize="18sp"
            android:text=":"/>

        <TextView android:id="@+id/firstMinuteDisplay"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/firstHourDisplay"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:hint="30"/>

        <TextView android:id="@+id/firstaMpMDisplay"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/firstMinuteDisplay"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:hint="am"/>

    </LinearLayout>

    <Button android:id="@+id/pickTime"
        android:layout_below="@+id/layoutOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickTime"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/line1"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_below="@+id/pickTime"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/layoutTwo"
        android:layout_below="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp">

        <TextView android:id="@+id/secondHourDisplay"
            android:paddingTop="10dp"
            android:layout_below="@+id/textfieldone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/secondHourDisplay"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text=":"/>

        <TextView android:id="@+id/secondMinuteDisplay"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:hint="30"/>

        <TextView android:id="@+id/secondaMpMDisplay"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/secondMinuteDisplay"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:hint="am"/>

    </LinearLayout>

    <Button android:id="@+id/pickTime2"
        android:layout_below="@+id/layoutTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickTime"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_below="@+id/pickTime2"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/layoutThree"
        android:layout_below="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/firstMonthDisplay"
            android:paddingTop="10dp"
            android:layout_below="@+id/textfieldone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="30"/>

        <TextView android:id="@+id/firstDayDisplay"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/firstDayDisplay"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text=","/>

        <TextView android:id="@+id/firstYearDisplay"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="30"/>

    </LinearLayout>

    <Button
        android:layout_below="@+id/layoutThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickDate"
        android:text="@string/pickDate"
        android:layout_marginStart="11dp"/>

    <View
        android:id="@+id/line4"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_below="@+id/pickDate"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/layoutFour"
        android:layout_below="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/secondMonthDisplay"
            android:paddingTop="10dp"
            android:layout_below="@+id/layoutFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="10"/>

        <TextView android:id="@+id/secondDayDisplay"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/secondDayDisplay"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text=","/>

        <TextView android:id="@+id/secondYearDisplay"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="11dp"
            android:hint="10"/>

    </LinearLayout>

    <Button
        android:layout_below="@+id/layoutFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickDate2"
        android:text="@string/pickDate"
        android:layout_marginStart="11dp"/>

    <View
        android:id="@+id/line5"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_below="@+id/pickDate2"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"/>

    <EditText android:id="@+id/tagField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:hint="Tag"
        android:layout_marginStart="11dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tagField"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonadd"
            android:id="@+id/buttonadd"
            android:layout_below="@+id/textfieldfour"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/buttoncancel"
            android:id="@+id/buttoncancel"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/buttonadd"
            android:layout_below="@+id/textfieldfour"
            />
    </LinearLayout>


</RelativeLayout>
